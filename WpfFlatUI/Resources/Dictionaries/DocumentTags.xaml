<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="TextBoxViewer" TargetType="{x:Type FlowDocumentScrollViewer}">
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled" />
        <Setter Property="IsSelectionEnabled" Value="False" />
    </Style>

    <Style x:Key="TextBoxDoc" TargetType="{x:Type FlowDocument}">
        <Setter Property="FontSize" Value="0.1" />
        <Setter Property="FontFamily" Value="./Resources/Fonts/#Lato" />
    </Style>

    <Style x:Key="TextBoxPara" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextAlignment" Value="Left" />
    </Style>
    
    <Style x:Key="LinkUnderline" TargetType="{x:Type Underline}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource GreenSeaBrush}" />
    </Style>
</ResourceDictionary>