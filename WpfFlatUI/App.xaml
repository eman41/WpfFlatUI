<Application x:Class="WpfFlatUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Dictionaries/Colors.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/TextBlocks.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Radios.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Buttons.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/DocumentTags.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
